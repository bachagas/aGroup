<div class="panel panel-default">
    <div class="panel-heading text-center">
        Groups
    </div>
    <div class="panel-body">
        <div class="row" ng-repeat="person in entities | filter: {type: 'person'} | orderByStatus">
            <div class="col-md-4">{{person.name}}</div>
            <div class="col-md-8 text-right"> {{person.status}} in {{person.statusDate | date: 'd, MMM H:mm'}} </div>
        </div>
    </div>
</div>